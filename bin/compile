#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast and fail hard.
set -eo pipefail

# clean up leaking environment
unset GIT_DIR

if [ -z "$BUILDPACK_CACHE" ]; then BUILDPACK_CACHE="/tmp"; fi
LP_DIR=`cd $(dirname $0); cd ..; pwd`

BUILD_DIR=$1
CACHE_DIR=$2

FIXED_HOME=/app

sudo apt-get install cmake cmake-curses-gui gcc g++ git eclipse

cd ~

git clone --recursive  http://itk.org/SimpleITK.git

cd SimpleITK

cd ~
mkdir SimpleITK-build
cd SimpleITK-build
cmake ../SimpleITK/SuperBuild

make

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:~/SimpleITK-build/lib

